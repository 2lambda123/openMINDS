{
    "$id": "https://openminds.ebrains.eu/core/protocol?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Protocol",
    "description": "Structured information on a research project.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Protocol",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/behavioralTask": {
            "_instruction": "Add all behavioral tasks that were executed as part of this protocol.",
            "description": "Specific set of defined activities (or their absence) that should be performed (or avoided) by a subject.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/BehavioralTask"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "behavioralTask",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this protocol.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a descriptive name for this protocol.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/studyTarget": {
            "_instruction": "Add all study targets of this model version.",
            "description": "Structure or function that was targeted within a study.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerm/BiologicalSex",
                                "https://openminds.ebrains.eu/controlledTerm/Disease",
                                "https://openminds.ebrains.eu/controlledTerm/Genotype",
                                "https://openminds.ebrains.eu/controlledTerm/Phenotype",
                                "https://openminds.ebrains.eu/controlledTerm/Species",
                                "https://openminds.ebrains.eu/controlledTerm/TermSuggestion",
                                "https://openminds.ebrains.eu/sands/AnatomicalEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "studyTarget",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/technique": {
            "_instruction": "Add all techniques that were used in this protocol.",
            "description": "Method of accomplishing a desired aim.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/Technique"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "technique",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/description",
        "@id",
        "https://openminds.ebrains.eu/vocab/name",
        "https://openminds.ebrains.eu/vocab/technique"
    ],
    "type": "object"
}