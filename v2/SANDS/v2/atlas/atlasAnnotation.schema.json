{
    "$id": "https://openminds.ebrains.eu/sands/atlasAnnotation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/AtlasAnnotation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/AtlasAnnotation",
            "type": "string"
        },
        "bestViewPoint": {
            "_type": "https://openminds.ebrains.eu/sands/CoordinatePoint",
            "description": "Structured information on a coordinate point.",
            "properties": {
                "coordinateSpace": {
                    "_instruction": "Add the coordinate space in which this coordinate point exists in.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/sands/CommonCoordinateSpace",
                        "https://openminds.ebrains.eu/sands/CustomCoordinateSpace"
                    ],
                    "description": "Two or three dimensional geometric setting.",
                    "title": "Coordinate space"
                },
                "coordinates": {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quanitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quanitify the uncertainty of a measurement.",
                            "title": "Type of uncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "description": "Quanitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "Uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "Unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "Value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "title": "Quantitative value",
                    "type": "object"
                }
            },
            "required": [
                "coordinates",
                "coordinateSpace"
            ],
            "title": "Coordinate point",
            "type": "object"
        },
        "criteria": {
            "_instruction": "Add the protocol execution defining the criteria that were applied to produce this atlas annotation.",
            "description": "Aspects or standards on which a judgement or decision is based.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ProtocolExecution"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Criteria",
            "type": "object"
        },
        "criteriaQualityType": {
            "_instruction": "Add the quality type of the stated criteria used to define this atlas annotation.",
            "description": "Distinct class that defines how the judgement or decision was made for a particular criteria.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/CriteriaQualityType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Criteria quality type",
            "type": "object"
        },
        "displayColor": {
            "_instruction": "Enter the preferred display color (HEX) for this atlas annotation.",
            "description": "Preferred coloring.",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "title": "Display color",
            "type": "string"
        },
        "inspiredBy": {
            "_instruction": "Add one or several (source) files that inspired the definition of this atlas annotation.",
            "description": "Reference to an inspiring element.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Inspired by",
            "type": "array",
            "uniqueItems": true
        },
        "internalIdentifier": {
            "_instruction": "Enter the identifier used for this annotation within the file it is stored in.",
            "description": "Term or code that identifies someone or something within a particular product.",
            "title": "Internal identifier",
            "type": "string"
        },
        "laterality": {
            "_instruction": "Add one or both sides of the body, bilateral organ or bilateral organ part that this atlas annotation is defined in.",
            "description": "Differentiation between a pair of lateral homologous parts of the body.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/Laterality"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "maxItems": 2,
            "minItems": 1,
            "title": "Laterality",
            "type": "array",
            "uniqueItems": true
        },
        "lookupLabel": {
            "_instruction": "Enter a lookup label for this atlas annotation that may help you to more easily find it again.",
            "title": "Lookup label",
            "type": "string"
        },
        "name": {
            "_instruction": "Enter a descriptive name for this atlas annotation.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "Name",
            "type": "string"
        },
        "versionIdentifier": {
            "_instruction": "Enter the version identifier of this atlas annotation.",
            "description": "Term or code used to identify the version of something.",
            "title": "Version identifier",
            "type": "string"
        },
        "versionInnovation": {
            "_instruction": "Enter a short description of the novelties/peculiarities of this atlas annotation.",
            "description": "Documentation on what changed in comparison to a previously published form of something.",
            "title": "Version innovation",
            "type": "string"
        },
        "visualizedIn": {
            "_instruction": "Add the (source) image file in which this atlas annotation is visualized in.",
            "description": "Reference to an image in which something is visible.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/File"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Visualized in",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "internalIdentifier",
        "versionIdentifier",
        "@type",
        "criteriaQualityType",
        "versionInnovation"
    ],
    "title": "Atlas annotation",
    "type": "object"
}