{
    "$id": "https://openminds.ebrains.eu/core/contentTypePattern?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/ContentTypePattern",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/ContentTypePattern",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/contentType": {
            "_instruction": "Enter the content type that can be defined by the given regular expression for file names/extentions.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "contentType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this content type pattern.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/regex": {
            "_instruction": "Enter a regular expression for the file names/extensions that defines the give content type.",
            "format": "ECMA262",
            "title": "regex",
            "type": "string"
        }
    },
    "required": [
        "@id",
        "@type",
        "https://openminds.ebrains.eu/vocab/regex",
        "https://openminds.ebrains.eu/vocab/contentType"
    ],
    "type": "object"
}