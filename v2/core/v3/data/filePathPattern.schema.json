{
    "$id": "https://openminds.ebrains.eu/core/filePathPattern?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/FilePathPattern",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FilePathPattern",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/groupingType": {
            "_instruction": "Add the type of grouping that is defined by the given file path pattern.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/FileBundleGrouping"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "groupingType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/regex": {
            "_instruction": "Enter the regular expression that defines this file path pattern.",
            "format": "ECMA262",
            "title": "regex",
            "type": "string"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/groupingType",
        "@type",
        "https://openminds.ebrains.eu/vocab/regex",
        "@id"
    ],
    "type": "object"
}