{
    "$id": "https://openminds.ebrains.eu/core/protocolExecution?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/ProtocolExecution",
    "description": "Structured information on a protocol execution.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/ProtocolExecution",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/behavioralTask": {
            "_instruction": "Add all behavioral tasks that were performed during this protocol execution.",
            "description": "Specific set of defined activities (or their absence) that should be performed (or avoided) by a subject.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/BehavioralTask"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "behavioralTask",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this activity.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/endedAtTime": {
            "_instruction": "Enter the time (e.g., '20:20:39+00:00') or datetime (e.g., '2018-11-13T20:20:39+00:00') of when the activity ended.",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "time"
                }
            ],
            "title": "endedAtTime",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/input": {
            "_instruction": "Add all inputs used by this activity.",
            "description": "Something or someone that is put into or participates in a process or machine.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/core/FileBundle",
                                "https://openminds.ebrains.eu/core/SubjectGroupState",
                                "https://openminds.ebrains.eu/core/SubjectState",
                                "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                                "https://openminds.ebrains.eu/core/TissueSampleState"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "input",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/isPartOf": {
            "_instruction": "Add the dataset version in which this protocol execution was conducted.",
            "description": "Reference to the ensemble of multiple things or beings.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DatasetVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "isPartOf",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this activity that may help you to more easily find it again.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/output": {
            "_instruction": "Add all outputs generated by this activity.",
            "description": "Something or someone that comes out of, is delivered or produced by a process or machine.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/core/FileBundle",
                                "https://openminds.ebrains.eu/core/SubjectGroupState",
                                "https://openminds.ebrains.eu/core/SubjectState",
                                "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                                "https://openminds.ebrains.eu/core/TissueSampleState"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "output",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/parameterSet": {
            "_type": "https://openminds.ebrains.eu/core/ParameterSet",
            "description": "Structured information on a used parameter set.",
            "properties": {
                "context": {
                    "_instruction": "Enter the common context for the parameters grouped in this set.",
                    "title": "context",
                    "type": "string"
                },
                "parameter": {
                    "anyOf": [
                        {
                            "_type": "https://openminds.ebrains.eu/core/NumericalParameter",
                            "properties": {
                                "name": {
                                    "_instruction": "Enter a descriptive name for this numerical parameter.",
                                    "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                                    "title": "name",
                                    "type": "string"
                                },
                                "value": {
                                    "anyOf": [
                                        {
                                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                                            "description": "Structured information on a quantitative value.",
                                            "properties": {
                                                "typeOfUncertainty": {
                                                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                                                    ],
                                                    "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                                                    "title": "typeOfUncertainty"
                                                },
                                                "uncertainty": {
                                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                                    "description": "Quantitative value range defining the uncertainty of a measurement.",
                                                    "items": {
                                                        "type": "number"
                                                    },
                                                    "maxItems": 2,
                                                    "minItems": 2,
                                                    "title": "uncertainty",
                                                    "type": "array"
                                                },
                                                "unit": {
                                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                                    ],
                                                    "description": "Determinate quantity adopted as a standard of measurement.",
                                                    "title": "unit"
                                                },
                                                "value": {
                                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                                    "description": "Entry for a property.",
                                                    "title": "value",
                                                    "type": "number"
                                                }
                                            },
                                            "required": [
                                                "value"
                                            ],
                                            "type": "object"
                                        },
                                        {
                                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                                            "properties": {
                                                "maxValue": {
                                                    "_instruction": "Add the maximum value measured for this range.",
                                                    "description": "Greatest quantity attained or allowed.",
                                                    "title": "maxValue",
                                                    "type": "number"
                                                },
                                                "minValue": {
                                                    "_instruction": "Add the minimum value measured for this range.",
                                                    "description": "Smallest quantity attained or allowed.",
                                                    "title": "minValue",
                                                    "type": "number"
                                                },
                                                "unit": {
                                                    "_instruction": "Add the unit of measurement of this quantitative value range.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                                    ],
                                                    "description": "Determinate quantity adopted as a standard of measurement.",
                                                    "title": "unit"
                                                }
                                            },
                                            "required": [
                                                "maxValue",
                                                "minValue"
                                            ],
                                            "type": "object"
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "name",
                                "value"
                            ],
                            "type": "object"
                        },
                        {
                            "_type": "https://openminds.ebrains.eu/core/StringParameter",
                            "properties": {
                                "name": {
                                    "_instruction": "Enter a descriptive name for this parameter.",
                                    "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                                    "title": "name",
                                    "type": "string"
                                },
                                "value": {
                                    "_instruction": "Enter a text value for this parameter.",
                                    "description": "Entry for a property.",
                                    "title": "value",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "value"
                            ],
                            "type": "object"
                        }
                    ]
                },
                "relevantFor": {
                    "_instruction": "Add the technique or behavioral task where this set of parameters is used in.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/core/BehavioralTask",
                        "https://openminds.ebrains.eu/controlledTerms/Technique"
                    ],
                    "description": "Reference to what or whom something or someone bears siginificance.",
                    "title": "relevantFor"
                }
            },
            "required": [
                "context",
                "relevantFor",
                "parameter"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/preparationType": {
            "_instruction": "Add the initial preparation type for this protocol execution.",
            "description": "Distinct class of actions or processes that make something ready for use or service.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/PreparationType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "preparationType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/protocol": {
            "_instruction": "Add all protocols that were used in this protocol execution.",
            "description": "Plan that describes the process of a scientific or medical experiment, treatment, or procedure.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Protocol"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "protocol",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/startedAtTime": {
            "_instruction": "Enter the time (e.g., '20:20:39+00:00') or datetime (e.g., '2018-11-13T20:20:39+00:00') of when the activity started.",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "time"
                }
            ],
            "title": "startedAtTime",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/studyTarget": {
            "_instruction": "Add all study targets of this activity.",
            "description": "Structure or function that was targeted within a study.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/ParcellationEntity",
                                "https://openminds.ebrains.eu/sands/CustomAnatomicalEntity",
                                "https://openminds.ebrains.eu/controlledTerms/OrganismSubstance",
                                "https://openminds.ebrains.eu/controlledTerms/TactileStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/OrganismSystem",
                                "https://openminds.ebrains.eu/controlledTerms/GeneticStrainType",
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/BreedingType",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel",
                                "https://openminds.ebrains.eu/controlledTerms/VisualStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/Species",
                                "https://openminds.ebrains.eu/controlledTerms/ElectricalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/SubcellularEntity",
                                "https://openminds.ebrains.eu/controlledTerms/AuditoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/GustatoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/CellCultureType",
                                "https://openminds.ebrains.eu/controlledTerms/UBERONParcellation",
                                "https://openminds.ebrains.eu/controlledTerms/Handedness",
                                "https://openminds.ebrains.eu/controlledTerms/TermSuggestion",
                                "https://openminds.ebrains.eu/controlledTerms/OpticalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/OlfactoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalSex",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalOrder",
                                "https://openminds.ebrains.eu/controlledTerms/MolecularEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "studyTarget",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/protocol",
        "https://openminds.ebrains.eu/vocab/output",
        "@type",
        "https://openminds.ebrains.eu/vocab/isPartOf",
        "@id",
        "https://openminds.ebrains.eu/vocab/input"
    ],
    "type": "object"
}