{
    "$id": "https://openminds.ebrains.eu/computation/modelValidation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "computationalActivity"
    ],
    "_type": "https://openminds.ebrains.eu/computation/ModelValidation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/computation/ModelValidation",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/customPropertySet": {
            "_type": "https://openminds.ebrains.eu/core/CustomPropertySet",
            "properties": {
                "context": {
                    "_instruction": "Enter the common context for this custom property set.",
                    "title": "context",
                    "type": "string"
                },
                "definedIn": {
                    "_instruction": "Add a file or configuration that specifies the custom property set of the given context.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/core/File",
                        "https://openminds.ebrains.eu/core/Configuration",
                        "https://openminds.ebrains.eu/core/PropertyValueList"
                    ],
                    "description": "Reference to a file instance in which something is stored.",
                    "title": "definedIn"
                },
                "relevantFor": {
                    "_instruction": "Add the technique for which this custom property set is relevant.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/Technique"
                    ],
                    "description": "Reference to what or whom something or someone bears siginificance.",
                    "title": "relevantFor"
                }
            },
            "required": [
                "context",
                "relevantFor",
                "definedIn"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this activity.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/endedAtTime": {
            "_instruction": "Enter the time (e.g., '20:20:39+00:00') or datetime (e.g., '2018-11-13T20:20:39+00:00') of when the activity ended.",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "time"
                }
            ],
            "title": "endedAtTime",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/environment": {
            "_instruction": "Add the computational environment in which this computation was executed.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/Environment"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "environment",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/input": {
            "_instruction": "Add all inputs used by this activity.",
            "description": "Something or someone that is put into or participates in a process or machine.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/FileBundle",
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/computation/LocalFile",
                                "https://openminds.ebrains.eu/core/SoftwareVersion",
                                "https://openminds.ebrains.eu/core/ModelVersion",
                                "https://openminds.ebrains.eu/computation/ValidationTestVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "input",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/launchConfiguration": {
            "_instruction": "Add the launch configuration of this computation, e.g. command-line arguments",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/LaunchConfiguration"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "launchConfiguration",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this activity that may help you to more easily find it again.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/output": {
            "_instruction": "Add all outputs generated by this activity.",
            "description": "Something or someone that comes out of, is delivered or produced by a process or machine.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/FileBundle",
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/computation/LocalFile"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "output",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/performedBy": {
            "_instruction": "Add all agents (persons or software agent) that performed this activity.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/computation/SoftwareAgent",
                                "https://openminds.ebrains.eu/core/Person"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "performedBy",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/recipe": {
            "_instruction": "Add the workflow recipe version used for this computation",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "recipe",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/resourceUsage": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "description": "Greatest quantity attained or allowed.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "maxValueUnit": {
                            "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "maxValueUnit"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "description": "Smallest quantity attained or allowed.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "minValueUnit": {
                            "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "minValueUnit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        },
        "https://openminds.ebrains.eu/vocab/score": {
            "_instruction": "Enter the numerical score generated by this validation.",
            "title": "score",
            "type": "number"
        },
        "https://openminds.ebrains.eu/vocab/startedAtTime": {
            "_instruction": "Enter the time (e.g., '20:20:39+00:00') or datetime (e.g., '2018-11-13T20:20:39+00:00') of when the activity started.",
            "anyOf": [
                {
                    "format": "date-time"
                },
                {
                    "format": "time"
                }
            ],
            "title": "startedAtTime",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/startedBy": {
            "_instruction": "Add the person or software agent who launched this computation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Person",
                            "https://openminds.ebrains.eu/computation/SoftwareAgent"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "startedBy",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/status": {
            "_instruction": "Enter the current status of this computation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/ActionStatusType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "status",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/studyTarget": {
            "_instruction": "Add all study targets of this activity.",
            "description": "Structure or function that was targeted within a study.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/ParcellationEntity",
                                "https://openminds.ebrains.eu/sands/ParcellationEntityVersion",
                                "https://openminds.ebrains.eu/sands/CustomAnatomicalEntity",
                                "https://openminds.ebrains.eu/controlledTerms/TactileStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/BodySystem",
                                "https://openminds.ebrains.eu/controlledTerms/GeneticStrainType",
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/BreedingType",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel",
                                "https://openminds.ebrains.eu/controlledTerms/VisualStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/Species",
                                "https://openminds.ebrains.eu/controlledTerms/ElectricalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/SubcellularEntity",
                                "https://openminds.ebrains.eu/controlledTerms/AuditoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/GustatoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/CellCultureType",
                                "https://openminds.ebrains.eu/controlledTerms/UBERONParcellation",
                                "https://openminds.ebrains.eu/controlledTerms/Handedness",
                                "https://openminds.ebrains.eu/controlledTerms/TermSuggestion",
                                "https://openminds.ebrains.eu/controlledTerms/OpticalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/OlfactoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalSex",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalOrder",
                                "https://openminds.ebrains.eu/controlledTerms/MolecularEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "studyTarget",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/tags": {
            "_instruction": "Enter custom tags for this computation.",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "title": "tags",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/wasInformedBy": {
            "_instruction": "Add any other computation that sent data to this one during runtime.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/Optimization",
                            "https://openminds.ebrains.eu/computation/Visualization",
                            "https://openminds.ebrains.eu/computation/Simulation",
                            "https://openminds.ebrains.eu/computation/DataAnalysis",
                            "https://openminds.ebrains.eu/computation/ModelValidation"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "wasInformedBy",
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/environment",
        "https://openminds.ebrains.eu/vocab/input",
        "@type",
        "https://openminds.ebrains.eu/vocab/startedAtTime",
        "https://openminds.ebrains.eu/vocab/output",
        "@id",
        "https://openminds.ebrains.eu/vocab/launchConfiguration"
    ],
    "type": "object"
}