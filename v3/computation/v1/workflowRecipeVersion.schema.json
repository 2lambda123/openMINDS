                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "isAlternativeVersionOf",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/isNewVersionOf": {
            "_instruction": "Add the workflow recipe version preceding this one.",
            "description": "Reference to a previous (potentially outdated) particular form of something.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "isNewVersionOf",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/license": {
            "_instruction": "Add at least one license for this workflow recipe version.",
            "description": "Grant by a party to another party as an element of an agreement between those parties that permits to do, use, or own something.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/License"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "license",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/format",
        "@id",
        "@type"
    ],
    "type": "object"
}