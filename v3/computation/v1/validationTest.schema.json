{
    "$id": "https://openminds.ebrains.eu/computation/validationTest?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "researchProduct"
    ],
    "_type": "https://openminds.ebrains.eu/computation/ValidationTest",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/computation/ValidationTest",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/custodian": {
            "_instruction": "Add one or several person(s) or organization(s) that fulfills the role of a custodian. The role of the custodian is typically fulfilled by a research group leader or principal investigator, but could also be carried out by an organization. Custodians are typically the main contact in case of misconduct, obtain permission from the contributors to publish personal information, and maintain the content and quality of the data, metadata, and/or code of a research product. Unless specified differently, this custodian will be responsible for all attached research product versions.",
            "description": "The 'custodian' is a legal person who is responsible for the content and quality of the data, metadata, and/or code of a research product.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Organization",
                                "https://openminds.ebrains.eu/core/Person"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "custodian",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description (abstract) for this research product (max. 2000 characters, incl. spaces; no references). Note that this description should be fitting for all attached research product versions.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "maxLength": 2000,
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/developer": {
            "_instruction": "Add one or several developers (person or organization) that contributed to this validation test.",
            "description": "Legal person that creates or improves products or services (e.g., software, applications, etc.).",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Organization",
                                "https://openminds.ebrains.eu/core/Person"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "developer",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
            "_instruction": "Add the globally unique and persistent digital identifier of this research product. Note that this digital identifier will be used to reference all attached research product versions.",
            "description": "Digital handle to identify objects or legal persons.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DOI"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "digitalIdentifier",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/experimentalTechnique": {
            "_instruction": "Add the experimental technique used to obtain the reference data for this validation test.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/Technique"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "experimentalTechnique",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/fullName": {
            "_instruction": "Enter a descriptive full name (title) for this research product.  Note that this full name should be fitting for all attached research product versions.",
            "description": "Whole, non-abbreviated name of something or somebody.",
            "title": "fullName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/hasVersion": {
            "_instruction": "Add one or several versions of this validation test.",
            "description": "Reference to variants of an original.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/computation/ValidationTestVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "hasVersion",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/homepage": {
            "_instruction": "Add the uniform resource locator (URL) to the homepage of this research product.",
            "description": "Main website of something or someone.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/URL"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "homepage",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/howToCite": {
            "_instruction": "Enter the preferred citation text for this research product. Leave blank if citation text can be extracted from the assigned digital identifier.",
            "description": "Preferred format for citing a particular object or legal person.",
            "title": "howToCite",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/scope": {
            "_instruction": "Add the scope of this validation test.",
            "description": "Extent of something.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/ModelScope"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "scope",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/scoreType": {
            "_instruction": "Add the type of the score calculated in this validation test.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/DifferenceMeasure"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "scoreType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/shortName": {
            "_instruction": "Enter a short name (alias) for this research product that could be used as a shortened title for visualization in cases where there is only little space for display.",
            "description": "Shortened or fully abbreviated name of something or somebody.",
            "maxLength": 30,
            "title": "shortName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/studyTarget": {
            "_instruction": "Add all study targets of this validation test.",
            "description": "Structure or function that was targeted within a study.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/GeneticStrainType",
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/Species",
                                "https://openminds.ebrains.eu/controlledTerms/SubcellularEntity",
                                "https://openminds.ebrains.eu/controlledTerms/Handedness",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/UBERONParcellation",
                                "https://openminds.ebrains.eu/controlledTerms/TermSuggestion",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalSex",
                                "https://openminds.ebrains.eu/controlledTerms/MolecularEntity",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalOrder",
                                "https://openminds.ebrains.eu/controlledTerms/BreedingType",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel",
                                "https://openminds.ebrains.eu/controlledTerms/CellCultureType",
                                "https://openminds.ebrains.eu/sands/ParcellationEntity",
                                "https://openminds.ebrains.eu/sands/ParcellationEntityVersion",
                                "https://openminds.ebrains.eu/sands/CustomAnatomicalEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "studyTarget",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/developer",
        "@type",
        "https://openminds.ebrains.eu/vocab/description",
        "https://openminds.ebrains.eu/vocab/shortName",
        "https://openminds.ebrains.eu/vocab/fullName",
        "https://openminds.ebrains.eu/vocab/hasVersion",
        "@id"
    ],
    "type": "object"
}