{
    "$id": "https://openminds.ebrains.eu/ephys/channel?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/ephys/Channel",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/ephys/Channel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/internalIdentifier": {
            "_instruction": "Enter the identifier (or label) of this channel that is used within the corresponding data files to identify this channel.",
            "description": "Term or code that identifies someone or something within a particular product.",
            "title": "internalIdentifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/unit": {
            "_instruction": "Add the unit of measurement for this channel.",
            "description": "Determinate quantity adopted as a standard of measurement.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "unit",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "@type",
        "https://openminds.ebrains.eu/vocab/unit",
        "https://openminds.ebrains.eu/vocab/internalIdentifier"
    ],
    "type": "object"
}