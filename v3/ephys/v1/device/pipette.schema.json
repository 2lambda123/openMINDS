{
    "$id": "https://openminds.ebrains.eu/ephys/pipette?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "setupComponent"
    ],
    "_type": "https://openminds.ebrains.eu/ephys/Pipette",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/ephys/Pipette",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a short text describing this device.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/deviceType": {
            "_instruction": "Add the type of this device.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/DeviceType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "deviceType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
            "_instruction": "Add the globally unique and persistent digital identifier of this device.",
            "description": "Digital handle to identify objects or legal persons.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DOI",
                            "https://openminds.ebrains.eu/core/RRID"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "digitalIdentifier",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/externalDiameter": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quantitative value.",
            "properties": {
                "typeOfUncertainty": {
                    "_instruction": "Add the type of uncertainty used to determine the uncertainity for this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                    ],
                    "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                    "title": "typeOfUncertainty"
                },
                "uncertainty": {
                    "_instruction": "Enter the uncertainty of this quantitative value.",
                    "description": "Quantitative value range defining the uncertainty of a measurement.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value and its uncertainty.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "description": "Determinate quantity adopted as a standard of measurement.",
                    "title": "unit"
                },
                "value": {
                    "_instruction": "Enter the value of this quantitative value.",
                    "description": "Entry for a property.",
                    "title": "value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/internalDiameter": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quantitative value.",
            "properties": {
                "typeOfUncertainty": {
                    "_instruction": "Add the type of uncertainty used to determine the uncertainity for this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                    ],
                    "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                    "title": "typeOfUncertainty"
                },
                "uncertainty": {
                    "_instruction": "Enter the uncertainty of this quantitative value.",
                    "description": "Quantitative value range defining the uncertainty of a measurement.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value and its uncertainty.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "description": "Determinate quantity adopted as a standard of measurement.",
                    "title": "unit"
                },
                "value": {
                    "_instruction": "Enter the value of this quantitative value.",
                    "description": "Entry for a property.",
                    "title": "value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/internalIdentifier": {
            "_instruction": "Enter the identifier (or label) of this pipette that is used within the corresponding data files to identify this pipette.",
            "description": "Term or code that identifies someone or something within a particular product.",
            "title": "internalIdentifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this device that may help you to find this instance more easily.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/manufacturer": {
            "_instruction": "Add the manufacturer (private or industrial) that constructed this device.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Person",
                                "https://openminds.ebrains.eu/core/Consortium",
                                "https://openminds.ebrains.eu/core/Organization"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "manufacturer",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/material": {
            "_instruction": "Add the material that the pipette is made of.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/chemicals/ChemicalMixture",
                            "https://openminds.ebrains.eu/chemicals/ChemicalSubstance",
                            "https://openminds.ebrains.eu/controlledTerms/MolecularEntity"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "material",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a descriptive name for this device, preferably including the model name as defined by the manufacturer.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/owner": {
            "_instruction": "Add all parties that legally own this device.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Person",
                                "https://openminds.ebrains.eu/core/Consortium",
                                "https://openminds.ebrains.eu/core/Organization"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "owner",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/serialNumber": {
            "_instruction": "Enter the serial number of this device.",
            "title": "serialNumber",
            "type": "string"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/deviceType",
        "https://openminds.ebrains.eu/vocab/name",
        "@id",
        "@type"
    ],
    "type": "object"
}