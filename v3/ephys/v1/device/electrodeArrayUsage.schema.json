{
    "$id": "https://openminds.ebrains.eu/ephys/electrodeArrayUsage?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "deviceUsage"
    ],
    "_type": "https://openminds.ebrains.eu/ephys/ElectrodeArrayUsage",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/ephys/ElectrodeArrayUsage",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/anatomicalLocationOfArray": {
            "_instruction": "Add all anatomical entities that semantically best describe the overall anatomical location of the electrode array.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/ParcellationEntity",
                                "https://openminds.ebrains.eu/sands/ParcellationEntityVersion",
                                "https://openminds.ebrains.eu/sands/CustomAnatomicalEntity",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/UBERONParcellation",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/OrganismSubstance",
                                "https://openminds.ebrains.eu/controlledTerms/SubcellularEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "anatomicalLocationOfArray",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/anatomicalLocationOfElectrodes": {
            "_instruction": "Add all anatomical entities that semantically best describe the anatomical location of each electrode contact of this array during its use, in the same order that the electrode identifiers for this electrode array have been specified.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/ParcellationEntity",
                                "https://openminds.ebrains.eu/sands/ParcellationEntityVersion",
                                "https://openminds.ebrains.eu/sands/CustomAnatomicalEntity",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/UBERONParcellation",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/OrganismSubstance",
                                "https://openminds.ebrains.eu/controlledTerms/SubcellularEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 2,
            "title": "anatomicalLocationOfElectrodes",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/contactResistances": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used to determine the uncertainity for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value and its uncertainty.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "description": "A representation of a range of quantitative values.",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Enter the maximum value.",
                            "description": "Greatest quantity attained or allowed.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "maxValueUnit": {
                            "_instruction": "Add the unit of measurement for the maximum value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "maxValueUnit"
                        },
                        "minValue": {
                            "_instruction": "Enter the minimum value.",
                            "description": "Smallest quantity attained or allowed.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "minValueUnit": {
                            "_instruction": "Add the unit of measurement for the minimum value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "minValueUnit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        },
        "https://openminds.ebrains.eu/vocab/device": {
            "_instruction": "Add the electrode array used.",
            "description": "Piece of equipment or mechanism (hardware) designed to serve a special purpose or perform a special function.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/ephys/ElectrodeArray"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "device",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this device usage that may help you to find this instance more easily.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/metadataLocation": {
            "_instruction": "Add all files or file bundles containing additional information about the usage of this device.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/core/FileBundle"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "metadataLocation",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/spatialLocationOfElectrodes": {
            "_type": "https://openminds.ebrains.eu/sands/CoordinatePoint",
            "description": "Structured information on a coordinate point.",
            "properties": {
                "coordinateSpace": {
                    "_instruction": "Add the coordinate space in which this coordinate point exists in.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/sands/CommonCoordinateSpaceVersion",
                        "https://openminds.ebrains.eu/sands/CustomCoordinateSpace"
                    ],
                    "description": "Two or three dimensional geometric setting.",
                    "title": "coordinateSpace"
                },
                "coordinates": {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used to determine the uncertainity for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value and its uncertainty.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "coordinates",
                "coordinateSpace"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/usedElectrode": {
            "_instruction": "Enter the identifiers of all electrodes that are actually in use for this array.",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "title": "usedElectrode",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/usedSpecimen": {
            "_instruction": "Add the state of the tissue sample or subject that this device was used on.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/SubjectState",
                            "https://openminds.ebrains.eu/core/TissueSampleState"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "usedSpecimen",
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/device",
        "@type",
        "@id"
    ],
    "type": "object"
}