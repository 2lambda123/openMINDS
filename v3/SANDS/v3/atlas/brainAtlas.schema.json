{
    "$id": "https://openminds.ebrains.eu/sands/brainAtlas?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/BrainAtlas",
    "description": "Structured information on a brain atlas (concept level).",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/BrainAtlas",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/author": {
            "_instruction": "Add one or several authors (person or organization) that contributed to the production and publication of this brain atlas.",
            "description": "Creator of a literary or creative work, as well as a dataset publication.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Organization",
                                "https://openminds.ebrains.eu/core/Person"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "author",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
            "_instruction": "Add the globally unique and persistent digital identifier of this brain atlas.",
            "description": "Digital handle to identify objects or legal persons.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DOI",
                            "https://openminds.ebrains.eu/core/ISBN"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "digitalIdentifier",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/hasTerminology": {
            "_type": "https://openminds.ebrains.eu/sands/ParcellationTerminology",
            "properties": {
                "definedIn": {
                    "_instruction": "Add one or several files in which this parcellation terminology is stored in.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/core/File"
                    ],
                    "description": "Reference to a file instance in which something is stored.",
                    "minItems": 1,
                    "title": "definedIn",
                    "type": "array",
                    "uniqueItems": true
                },
                "fullName": {
                    "_instruction": "Enter a descriptive full name for this parcellation terminology.",
                    "description": "Whole, non-abbreviated name of something or somebody.",
                    "title": "fullName",
                    "type": "string"
                },
                "hasEntity": {
                    "_instruction": "Add one or several parcellation entities which belong to this parcellation terminology.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/sands/ParcellationEntity"
                    ],
                    "minItems": 1,
                    "title": "hasEntity",
                    "type": "array",
                    "uniqueItems": true
                },
                "ontologyIdentifier": {
                    "_formats": [
                        "iri"
                    ],
                    "_instruction": "Enter the identifier (IRI) of the related ontological term matching this parcellation terminology.",
                    "description": "Term or code used to identify something or someone registered within a particular ontology.",
                    "title": "ontologyIdentifier",
                    "type": "string"
                },
                "shortName": {
                    "_instruction": "Enter a descriptive short name for this parcellation terminology.",
                    "description": "Shortened or fully abbreviated name of something or somebody.",
                    "title": "shortName",
                    "type": "string"
                }
            },
            "required": [
                "hasEntity",
                "shortName"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/hasVersion": {
            "_instruction": "Add one or several brain atlas versions that belong to this brain atlas.",
            "description": "Reference to variants of an original.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/BrainAtlasVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "hasVersion",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/hasTerminology",
        "@type",
        "https://openminds.ebrains.eu/vocab/author",
        "@id"
    ],
    "type": "object"
}