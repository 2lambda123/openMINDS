{
    "$id": "https://openminds.ebrains.eu/sands/parcellationTerminologyVersion?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/ParcellationTerminologyVersion",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/ParcellationTerminologyVersion",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/dataLocation": {
            "_instruction": "Add the location of all files in which this parcellation terminology version is stored.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "dataLocation",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/hasEntity": {
            "_instruction": "Add all parcellation entity versions which belong to this parcellation terminology version.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/ParcellationEntityVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "hasEntity",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/ontologyIdentifier": {
            "_instruction": "Enter the internationalized resource identifiers (IRIs) to the related ontological terms matching this parcellation terminology version.",
            "description": "Term or code used to identify something or someone registered within a particular ontology.",
            "items": {
                "_formats": [
                    "iri"
                ],
                "type": "string"
            },
            "minItems": 1,
            "title": "ontologyIdentifier",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/hasEntity",
        "@id"
    ],
    "type": "object"
}