{
    "$id": "https://openminds.ebrains.eu/stimulation/ephysStimulus?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/stimulation/EphysStimulus",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/stimulation/EphysStimulus",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/stimulusType": {
            "_instruction": "Add the type of the electrical stimulus.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/ElectricalStimulusType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "stimulusType",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "@type"
    ],
    "type": "object"
}