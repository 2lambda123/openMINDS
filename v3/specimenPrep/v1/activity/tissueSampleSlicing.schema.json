{
    "$id": "https://openminds.ebrains.eu/specimenPrep/tissueSampleSlicing?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/specimenPrep/TissueSampleSlicing",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/specimenPrep/TissueSampleSlicing",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/input": {
            "_instruction": "Add the state of the subject(s) or tissue(s) prior to slicing.",
            "description": "Something or someone that is put into or participates in a process or machine.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/SubjectState",
                            "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                            "https://openminds.ebrains.eu/core/TissueSampleState"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "input",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/output": {
            "_instruction": "Add the state of the tissue slices after slicing.",
            "description": "Something or someone that comes out of, is delivered or produced by a process or machine.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/TissueSampleState",
                                "https://openminds.ebrains.eu/core/TissueSampleCollectionState"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "output",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/slicingDevice": {
            "_instruction": "Add the device used to cut the tissue sample.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/specimenPrep/SlicingDeviceUsage"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "slicingDevice",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/temperature": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "description": "Greatest quantity attained or allowed.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "maxValueUnit": {
                            "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "maxValueUnit"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "description": "Smallest quantity attained or allowed.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "minValueUnit": {
                            "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "minValueUnit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        },
        "https://openminds.ebrains.eu/vocab/tissueBathSolution": {
            "_instruction": "Solution in which the tissue sample was sliced (e.g. Ringer's solution)",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/chemicals/ChemicalMixture"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "tissueBathSolution",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "https://openminds.ebrains.eu/vocab/slicingDevice",
        "@type",
        "https://openminds.ebrains.eu/vocab/input",
        "https://openminds.ebrains.eu/vocab/output"
    ],
    "type": "object"
}