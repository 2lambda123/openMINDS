{
    "$id": "https://openminds.ebrains.eu/specimenPrep/tissueCulturePreparation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/specimenPrep/TissueCulturePreparation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/specimenPrep/TissueCulturePreparation",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/cultureMedium": {
            "_instruction": "Add the culture medium used during this tissue culture preparation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/chemicals/ChemicalMixture"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "cultureMedium",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/cultureType": {
            "_instruction": "Add the cell culture type of the resulting tissue cell culture.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/CellCultureType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "cultureType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/input": {
            "_instruction": "Add the state of the specimen before it was prepared as culture in this activity.",
            "description": "Something or someone that is put into or participates in a process or machine.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/TissueSampleState",
                            "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                            "https://openminds.ebrains.eu/core/SubjectGroupState",
                            "https://openminds.ebrains.eu/core/SubjectState"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "input",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/output": {
            "_instruction": "Add the state of the prepared tissue sample culture that resulted from this activity.",
            "description": "Something or someone that comes out of, is delivered or produced by a process or machine.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/TissueSampleState"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "output",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "https://openminds.ebrains.eu/vocab/cultureMedium",
        "@type",
        "https://openminds.ebrains.eu/vocab/cultureType"
    ],
    "type": "object"
}