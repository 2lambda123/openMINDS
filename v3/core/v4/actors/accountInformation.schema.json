{
    "$id": "https://openminds.ebrains.eu/core/accountInformation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/AccountInformation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/AccountInformation",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/service": {
            "_instruction": "Add the web service of this account.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/WebService"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "service",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/userName": {
            "_instruction": "Enter the user name for this account.",
            "title": "userName",
            "type": "string"
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/service",
        "@id",
        "https://openminds.ebrains.eu/vocab/userName"
    ],
    "type": "object"
}