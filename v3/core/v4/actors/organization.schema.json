{
    "$id": "https://openminds.ebrains.eu/core/organization?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "legalPerson"
    ],
    "_type": "https://openminds.ebrains.eu/core/Organization",
    "description": "Structured information on an organization.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Organization",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/affiliation": {
            "_type": "https://openminds.ebrains.eu/core/Affiliation",
            "properties": {
                "endDate": {
                    "_formats": [
                        "date"
                    ],
                    "_instruction": "Enter the end date of this affiliation. Leave blank if the affiliation is still current.",
                    "description": "Date in the Gregorian calendar at which something terminates in time.",
                    "title": "endDate",
                    "type": "string"
                },
                "memberOf": {
                    "_instruction": "Add the organization or consortium to which a person or organization is or was affiliated.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/core/Organization",
                        "https://openminds.ebrains.eu/core/Consortium"
                    ],
                    "title": "memberOf"
                },
                "startDate": {
                    "_formats": [
                        "date"
                    ],
                    "_instruction": "Enter the start date of this affiliation.",
                    "description": "Date in the Gregorian calendar at which something begins in time",
                    "title": "startDate",
                    "type": "string"
                }
            },
            "required": [
                "organization"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
            "_instruction": "Add one or several globally unique and persistent digital identifier for this organization.",
            "description": "Digital handle to identify objects or legal persons.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/GRIDID",
                                "https://openminds.ebrains.eu/core/RORID",
                                "https://openminds.ebrains.eu/core/RRID"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "digitalIdentifier",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/fullName": {
            "_instruction": "Enter the full name of the organization.",
            "description": "Whole, non-abbreviated name of something or somebody.",
            "title": "fullName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/hasParent": {
            "_instruction": "Add all parent organizations of this organization.",
            "description": "Reference to a parent object or legal person.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Organization"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "hasParent",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/homepage": {
            "_instruction": "Add the uniform resource locator (URL) to the homepage of this organization.",
            "description": "Main website of something or someone.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/URL"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "homepage",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/shortName": {
            "_instruction": "Enter a short name (alias) for this organization that could be used as a shortened title for visualization in cases where there is only little space for display.",
            "description": "Shortened or fully abbreviated name of something or somebody.",
            "title": "shortName",
            "type": "string"
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/fullName",
        "@id"
    ],
    "type": "object"
}