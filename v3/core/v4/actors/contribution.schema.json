{
    "$id": "https://openminds.ebrains.eu/core/contribution?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Contribution",
    "description": "Structured information on the contribution made to a research product.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Contribution",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/contributor": {
            "_instruction": "Add all types of contribution made by the stated 'contributor'.",
            "description": "Legal person that gave or supplied something as a part or share.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Person",
                            "https://openminds.ebrains.eu/core/Consortium",
                            "https://openminds.ebrains.eu/core/Organization"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "contributor",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/type": {
            "_instruction": "Add the party that performed the contribution.",
            "description": "Distinct class to which a group of entities or concepts with similar characteristics or attributes belong to.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/ContributionType"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "type",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/type",
        "@id",
        "https://openminds.ebrains.eu/vocab/contributor",
        "@type"
    ],
    "type": "object"
}