{
    "$id": "https://openminds.ebrains.eu/core/consortium?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "legalPerson"
    ],
    "_type": "https://openminds.ebrains.eu/core/Consortium",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Consortium",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/contactInformation": {
            "_instruction": "Add the contact information for this consortium.",
            "description": "Any available way used to contact a person or business (e.g., address, phone number, email address, etc.).",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContactInformation"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "contactInformation",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/fullName": {
            "_instruction": "Enter the full name of the consortium.",
            "description": "Whole, non-abbreviated name of something or somebody.",
            "title": "fullName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/homepage": {
            "_instruction": "Add the uniform resource locator (URL) to the homepage of this consortium.",
            "description": "Main website of something or someone.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/URL"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "homepage",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/shortName": {
            "_instruction": "Enter the short name of this consortium.",
            "description": "Shortened or fully abbreviated name of something or somebody.",
            "title": "shortName",
            "type": "string"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/fullName",
        "@id",
        "https://openminds.ebrains.eu/vocab/members",
        "@type"
    ],
    "type": "object"
}