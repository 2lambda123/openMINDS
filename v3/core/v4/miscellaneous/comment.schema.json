{
    "$id": "https://openminds.ebrains.eu/core/comment?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Comment",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Comment",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/commenter": {
            "_instruction": "Enter the person who made this comment.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Person"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "commenter",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/content": {
            "_instruction": "Enter the comment.",
            "description": "Something that is contained.",
            "title": "content",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/subject": {
            "_instruction": "Add the research product you are commenting on.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Dataset",
                            "https://openminds.ebrains.eu/core/DatasetVersion",
                            "https://openminds.ebrains.eu/core/SoftwareVersion",
                            "https://openminds.ebrains.eu/core/MetaDataModel",
                            "https://openminds.ebrains.eu/core/Model",
                            "https://openminds.ebrains.eu/core/WebService",
                            "https://openminds.ebrains.eu/core/ModelVersion",
                            "https://openminds.ebrains.eu/core/Software",
                            "https://openminds.ebrains.eu/core/WebServiceVersion",
                            "https://openminds.ebrains.eu/core/MetaDataModelVersion",
                            "https://openminds.ebrains.eu/sands/BrainAtlasVersion",
                            "https://openminds.ebrains.eu/sands/CommonCoordinateSpaceVersion",
                            "https://openminds.ebrains.eu/sands/CommonCoordinateSpace",
                            "https://openminds.ebrains.eu/sands/BrainAtlas",
                            "https://openminds.ebrains.eu/publications/LivePaper",
                            "https://openminds.ebrains.eu/publications/LivePaperVersion",
                            "https://openminds.ebrains.eu/computation/WorkflowRecipe",
                            "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion",
                            "https://openminds.ebrains.eu/computation/ValidationTest",
                            "https://openminds.ebrains.eu/computation/ValidationTestVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "subject",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/timestamp": {
            "_instruction": "Enter the datetime (e.g., '2018-11-13T20:20:39+00:00') at which the comment was made.",
            "format": "date-time",
            "title": "timestamp",
            "type": "string"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/content",
        "https://openminds.ebrains.eu/vocab/subject",
        "https://openminds.ebrains.eu/vocab/commenter",
        "https://openminds.ebrains.eu/vocab/timestamp",
        "@type",
        "@id"
    ],
    "type": "object"
}