{
    "$id": "https://openminds.ebrains.eu/core/quantitativeValueRange?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
    "description": "A representation of a range of quantitative values.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/maxValue": {
            "_instruction": "Enter the maximum value.",
            "description": "Greatest quantity attained or allowed.",
            "title": "maxValue",
            "type": "number"
        },
        "https://openminds.ebrains.eu/vocab/maxValueUnit": {
            "_instruction": "Add the unit of measurement for the maximum value.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "maxValueUnit",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/minValue": {
            "_instruction": "Enter the minimum value.",
            "description": "Smallest quantity attained or allowed.",
            "title": "minValue",
            "type": "number"
        },
        "https://openminds.ebrains.eu/vocab/minValueUnit": {
            "_instruction": "Add the unit of measurement for the minimum value.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "minValueUnit",
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/maxValue",
        "@id",
        "https://openminds.ebrains.eu/vocab/minValue",
        "@type"
    ],
    "type": "object"
}