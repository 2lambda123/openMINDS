{
    "$id": "https://openminds.ebrains.eu/core/propertyValueList?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/PropertyValueList",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/PropertyValueList",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this property-value list that may help you to find this instance more easily.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/propertyValuePair": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/NumericalProperty",
                    "properties": {
                        "name": {
                            "_instruction": "Enter a descriptive name for this numerical property.",
                            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                            "title": "name",
                            "type": "string"
                        },
                        "value": {
                            "anyOf": [
                                {
                                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                                    "description": "Structured information on a quantitative value.",
                                    "properties": {
                                        "typeOfUncertainty": {
                                            "_instruction": "Add the type of uncertainty used to determine the uncertainity for this quantitative value.",
                                            "_linkedTypes": [
                                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                                            ],
                                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                                            "title": "typeOfUncertainty"
                                        },
                                        "uncertainty": {
                                            "_instruction": "Enter the uncertainty of this quantitative value.",
                                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                                            "items": {
                                                "type": "number"
                                            },
                                            "maxItems": 2,
                                            "minItems": 2,
                                            "title": "uncertainty",
                                            "type": "array"
                                        },
                                        "unit": {
                                            "_instruction": "Add the unit of measurement of this quantitative value and its uncertainty.",
                                            "_linkedTypes": [
                                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                            ],
                                            "description": "Determinate quantity adopted as a standard of measurement.",
                                            "title": "unit"
                                        },
                                        "value": {
                                            "_instruction": "Enter the value of this quantitative value.",
                                            "description": "Entry for a property.",
                                            "title": "value",
                                            "type": "number"
                                        }
                                    },
                                    "required": [
                                        "value"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                                    "properties": {
                                        "maxValue": {
                                            "_instruction": "Add the maximum value measured for this range.",
                                            "description": "Greatest quantity attained or allowed.",
                                            "title": "maxValue",
                                            "type": "number"
                                        },
                                        "maxValueUnit": {
                                            "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                                            "_linkedTypes": [
                                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                            ],
                                            "title": "maxValueUnit"
                                        },
                                        "minValue": {
                                            "_instruction": "Add the minimum value measured for this range.",
                                            "description": "Smallest quantity attained or allowed.",
                                            "title": "minValue",
                                            "type": "number"
                                        },
                                        "minValueUnit": {
                                            "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                                            "_linkedTypes": [
                                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                            ],
                                            "title": "minValueUnit"
                                        }
                                    },
                                    "required": [
                                        "maxValue",
                                        "minValue"
                                    ],
                                    "type": "object"
                                }
                            ]
                        }
                    },
                    "required": [
                        "name",
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/StringProperty",
                    "properties": {
                        "name": {
                            "_instruction": "Enter a descriptive name for this property.",
                            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                            "title": "name",
                            "type": "string"
                        },
                        "value": {
                            "_instruction": "Enter a text value for this property.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "string"
                        }
                    },
                    "required": [
                        "name",
                        "value"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "@type",
        "@id",
        "https://openminds.ebrains.eu/vocab/propertyValuePair"
    ],
    "type": "object"
}