{
    "$id": "https://openminds.ebrains.eu/core/stimulation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Stimulation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Stimulation",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/dataLocation": {
            "_instruction": "Add all data files containing the stimulus content (e.g. movies, audio files, injected current traces).",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/core/FileBundle"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "dataLocation",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this stimulation.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this stimulation that may help you to more easily find it again.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/parameterSet": {
            "_embeddedTypes": [
                "https://openminds.ebrains.eu/core/ParameterSet"
            ],
            "_instruction": "Add all important parameters grouped in context-specific sets that were used in this stimulus",
            "description": "Manner, position, or direction in which digital or physical properties are set to determine a particular function, characteristics or behavior of something.",
            "minItems": 1,
            "title": "parameterSet",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/stimulationApproach": {
            "_instruction": "Add the stimulation approach which this stimulation has deployed.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/StimulationApproach"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "stimulationApproach",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/stimulusType": {
            "_instruction": "Add the type of stimulus that has been used for this stimulation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/StimulusType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "stimulusType",
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/stimulusType",
        "@id",
        "@type",
        "https://openminds.ebrains.eu/vocab/stimulationApproach"
    ],
    "type": "object"
}