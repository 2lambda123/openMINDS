{
    "$id": "https://openminds.ebrains.eu/core/stimulation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Stimulation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Stimulation",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/dataLocation": {
            "_instruction": "Add all data files containing the stimulus content (e.g. movies, audio files, injected current traces).",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File",
                                "https://openminds.ebrains.eu/core/FileBundle"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "dataLocation",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this stimulation.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this stimulation that may help you to more easily find it again.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/parameterSet": {
            "_type": "https://openminds.ebrains.eu/core/ParameterSet",
            "description": "Structured information on a used parameter set.",
            "properties": {
                "context": {
                    "_instruction": "Enter the common context for the parameters grouped in this set.",
                    "title": "context",
                    "type": "string"
                },
                "parameter": {
                    "anyOf": [
                        {
                            "_type": "https://openminds.ebrains.eu/core/NumericalParameter",
                            "properties": {
                                "name": {
                                    "_instruction": "Enter a descriptive name for this numerical parameter.",
                                    "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                                    "title": "name",
                                    "type": "string"
                                },
                                "value": {
                                    "anyOf": [
                                        {
                                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                                            "description": "Structured information on a quantitative value.",
                                            "properties": {
                                                "typeOfUncertainty": {
                                                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                                                    ],
                                                    "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                                                    "title": "typeOfUncertainty"
                                                },
                                                "uncertainty": {
                                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                                    "description": "Quantitative value range defining the uncertainty of a measurement.",
                                                    "items": {
                                                        "type": "number"
                                                    },
                                                    "maxItems": 2,
                                                    "minItems": 2,
                                                    "title": "uncertainty",
                                                    "type": "array"
                                                },
                                                "unit": {
                                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                                    ],
                                                    "description": "Determinate quantity adopted as a standard of measurement.",
                                                    "title": "unit"
                                                },
                                                "value": {
                                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                                    "description": "Entry for a property.",
                                                    "title": "value",
                                                    "type": "number"
                                                }
                                            },
                                            "required": [
                                                "value"
                                            ],
                                            "type": "object"
                                        },
                                        {
                                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                                            "properties": {
                                                "maxValue": {
                                                    "_instruction": "Add the maximum value measured for this range.",
                                                    "description": "Greatest quantity attained or allowed.",
                                                    "title": "maxValue",
                                                    "type": "number"
                                                },
                                                "maxValueUnit": {
                                                    "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                                    ],
                                                    "title": "maxValueUnit"
                                                },
                                                "minValue": {
                                                    "_instruction": "Add the minimum value measured for this range.",
                                                    "description": "Smallest quantity attained or allowed.",
                                                    "title": "minValue",
                                                    "type": "number"
                                                },
                                                "minValueUnit": {
                                                    "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                                                    "_linkedTypes": [
                                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                                    ],
                                                    "title": "minValueUnit"
                                                }
                                            },
                                            "required": [
                                                "maxValue",
                                                "minValue"
                                            ],
                                            "type": "object"
                                        }
                                    ]
                                }
                            },
                            "required": [
                                "name",
                                "value"
                            ],
                            "type": "object"
                        },
                        {
                            "_type": "https://openminds.ebrains.eu/core/StringParameter",
                            "properties": {
                                "name": {
                                    "_instruction": "Enter a descriptive name for this parameter.",
                                    "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
                                    "title": "name",
                                    "type": "string"
                                },
                                "value": {
                                    "_instruction": "Enter a text value for this parameter.",
                                    "description": "Entry for a property.",
                                    "title": "value",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "value"
                            ],
                            "type": "object"
                        }
                    ]
                },
                "relevantFor": {
                    "_instruction": "Add the technique where this set of parameters is used.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/Technique"
                    ],
                    "description": "Reference to what or whom something or someone bears siginificance.",
                    "title": "relevantFor"
                }
            },
            "required": [
                "context",
                "relevantFor",
                "parameter"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/stimulationApproach": {
            "_instruction": "Add the stimulation approach which this stimulation has deployed.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/StimulationApproach"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "stimulationApproach",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/stimulusType": {
            "_instruction": "Add the type of stimulus that has been used for this stimulation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/StimulusType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "stimulusType",
            "type": "object"
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/stimulusType",
        "@id",
        "https://openminds.ebrains.eu/vocab/stimulationApproach"
    ],
    "type": "object"
}