{
    "$id": "https://openminds.ebrains.eu/core/behavioralProtocol?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "fileOrigin"
    ],
    "_type": "https://openminds.ebrains.eu/core/BehavioralProtocol",
    "description": "Structured information about a protocol used in an experiment studying human or animal behavior.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/BehavioralProtocol",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/describedIn": {
            "_instruction": "Add the publication or file in which this behavioral protocol is (originally) described in detail.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DOI",
                            "https://openminds.ebrains.eu/core/File",
                            "https://openminds.ebrains.eu/core/WebResource"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "describedIn",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this behavioral protocol.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/internalIdentifier": {
            "_instruction": "Enter the identifier (or label) of this behavioral protocol that is used within the corresponding data files to identify this behavioral protocol.",
            "description": "Term or code that identifies someone or something within a particular product.",
            "title": "internalIdentifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a descriptive name for this behavioral protocol.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/stimulation": {
            "_instruction": "Add all stimulation approaches and/or techniques used within this behavioral protocol.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/StimulationApproach",
                                "https://openminds.ebrains.eu/controlledTerms/StimulationTechnique"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "stimulation",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/stimulusType": {
            "_instruction": "Add all stimulus types used within this behavioral protocol.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/AuditoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/TactileStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/VisualStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/ElectricalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/OpticalStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/OlfactoryStimulusType",
                                "https://openminds.ebrains.eu/controlledTerms/GustatoryStimulusType"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "stimulusType",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/name",
        "@id",
        "@type",
        "https://openminds.ebrains.eu/vocab/description"
    ],
    "type": "object"
}