{
    "$id": "https://openminds.ebrains.eu/core/project?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Project",
    "description": "Structured information on a research project.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Project",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/coordinator": {
            "_instruction": "Add all parties that coordinate this project.",
            "description": "Legal person who organizes the collaborative work of people or groups.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Organization",
                                "https://openminds.ebrains.eu/core/Person",
                                "https://openminds.ebrains.eu/core/Consortium"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "coordinator",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this project.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/fullName": {
            "_instruction": "Enter a descriptive full name (or title) for this project.",
            "description": "Whole, non-abbreviated name of something or somebody.",
            "title": "fullName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/hasPart": {
            "_instruction": "Add all research product (versions) that are part of this project.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Dataset",
                                "https://openminds.ebrains.eu/core/MetaDataModel",
                                "https://openminds.ebrains.eu/core/DatasetVersion",
                                "https://openminds.ebrains.eu/core/Software",
                                "https://openminds.ebrains.eu/core/WebServiceVersion",
                                "https://openminds.ebrains.eu/core/MetaDataModelVersion",
                                "https://openminds.ebrains.eu/core/WebService",
                                "https://openminds.ebrains.eu/core/Model",
                                "https://openminds.ebrains.eu/core/ModelVersion",
                                "https://openminds.ebrains.eu/core/SoftwareVersion",
                                "https://openminds.ebrains.eu/sands/BrainAtlas",
                                "https://openminds.ebrains.eu/sands/CommonCoordinateSpace",
                                "https://openminds.ebrains.eu/sands/CommonCoordinateSpaceVersion",
                                "https://openminds.ebrains.eu/sands/BrainAtlasVersion",
                                "https://openminds.ebrains.eu/computation/ValidationTestVersion",
                                "https://openminds.ebrains.eu/computation/WorkflowRecipeVersion",
                                "https://openminds.ebrains.eu/computation/WorkflowRecipe",
                                "https://openminds.ebrains.eu/computation/ValidationTest",
                                "https://openminds.ebrains.eu/publications/LivePaperVersion",
                                "https://openminds.ebrains.eu/publications/LivePaper"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 2,
            "title": "hasPart",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/homepage": {
            "_instruction": "Enter the internationalized resource identifier (IRI) to the homepage of this project.",
            "description": "Main website of something or someone.",
            "format": "iri",
            "title": "homepage",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/shortName": {
            "_instruction": "Enter a short name (or alias) for this project that could be used as a shortened display title (e.g., for web services with too little space to display the full name).",
            "description": "Shortened or fully abbreviated name of something or somebody.",
            "title": "shortName",
            "type": "string"
        }
    },
    "required": [
        "@id",
        "https://openminds.ebrains.eu/vocab/shortName",
        "https://openminds.ebrains.eu/vocab/fullName",
        "@type",
        "https://openminds.ebrains.eu/vocab/description",
        "https://openminds.ebrains.eu/vocab/hasPart"
    ],
    "type": "object"
}