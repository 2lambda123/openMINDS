{
    "$id": "https://openminds.ebrains.eu/core/setup?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "setupComponent"
    ],
    "_type": "https://openminds.ebrains.eu/core/Setup",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Setup",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/components": {
            "_instruction": "Add all components or other setups used in this setup, including at least one device.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/specimenPrep/SlicingDevice",
                                "https://openminds.ebrains.eu/ephys/Electrode",
                                "https://openminds.ebrains.eu/ephys/Pipette",
                                "https://openminds.ebrains.eu/ephys/ElectrodeArray",
                                "https://openminds.ebrains.eu/core/SoftwareVersion",
                                "https://openminds.ebrains.eu/core/Setup"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 2,
            "title": "components",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/description": {
            "_instruction": "Enter a description of this setup.",
            "description": "Longer statement or account giving the characteristics of someone or something.",
            "title": "description",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/location": {
            "_instruction": "Enter where this setup is located. This may include room number, building, institution and/or city.",
            "title": "location",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/manufacturer": {
            "_instruction": "Add the private or industrial manufacturer (person or organization) that constructed this setup.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Person",
                                "https://openminds.ebrains.eu/core/Organization"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "manufacturer",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter the name of this setup.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/setupType": {
            "_instruction": "Add all relevant setup types.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/SetupType"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "setupType",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/components",
        "https://openminds.ebrains.eu/vocab/description",
        "https://openminds.ebrains.eu/vocab/name",
        "@id"
    ],
    "type": "object"
}