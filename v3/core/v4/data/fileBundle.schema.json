{
    "$id": "https://openminds.ebrains.eu/core/fileBundle?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "fileOrigin"
    ],
    "_type": "https://openminds.ebrains.eu/core/FileBundle",
    "description": "Structured information on a bundle of file instances.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FileBundle",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/contentDescription": {
            "_instruction": "Enter a short content description for this file bundle.",
            "title": "contentDescription",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/descendedFrom": {
            "_instruction": "Add the entity that played a role in the production of this file bundle.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/Technique",
                            "https://openminds.ebrains.eu/core/FileBundle",
                            "https://openminds.ebrains.eu/core/File",
                            "https://openminds.ebrains.eu/core/SubjectState",
                            "https://openminds.ebrains.eu/core/BehavioralProtocol",
                            "https://openminds.ebrains.eu/core/SubjectGroupState",
                            "https://openminds.ebrains.eu/core/SubjectGroup",
                            "https://openminds.ebrains.eu/core/TissueSampleCollectionState",
                            "https://openminds.ebrains.eu/core/TissueSampleState",
                            "https://openminds.ebrains.eu/core/Subject",
                            "https://openminds.ebrains.eu/core/TissueSample",
                            "https://openminds.ebrains.eu/core/TissueSampleCollection",
                            "https://openminds.ebrains.eu/computation/LocalFile"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "descendedFrom",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/format": {
            "_instruction": "If file instances within this bundle are organized and formatted according to a formal data structure use the appropriate contentType. Leave blank otherwise.",
            "description": "Method of digitally organizing and structuring data or information.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "format",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/groupingType": {
            "_instruction": "Add the type of grouping that was used to define this file bundle.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/FileBundleGrouping"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "groupingType",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/hash": {
            "_type": "https://openminds.ebrains.eu/core/Hash",
            "description": "Structured information on a hash.",
            "properties": {
                "algorithm": {
                    "_instruction": "Enter the algorithm used to generate this hash.",
                    "description": "Procedure for solving a mathematical problem in a finite number of steps. Can involve repetition of an operation.",
                    "title": "algorithm",
                    "type": "string"
                },
                "digest": {
                    "_instruction": "Enter the digest of this hash.",
                    "description": "Summation or condensation of a body of information.",
                    "title": "digest",
                    "type": "string"
                }
            },
            "required": [
                "algorithm",
                "digest"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/isPartOf": {
            "_instruction": "Add the file bundle or file repository this file bundle is a part of.",
            "description": "Reference to the ensemble of multiple things or beings.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/FileBundle",
                            "https://openminds.ebrains.eu/core/FileRepository"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "isPartOf",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter the name of this file bundle.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/storageSize": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quantitative value.",
            "properties": {
                "typeOfUncertainty": {
                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                    ],
                    "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                    "title": "typeOfUncertainty"
                },
                "uncertainty": {
                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                    "description": "Quantitative value range defining the uncertainty of a measurement.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "description": "Determinate quantity adopted as a standard of measurement.",
                    "title": "unit"
                },
                "value": {
                    "_instruction": "Enter the measurement value of this quantitative value.",
                    "description": "Entry for a property.",
                    "title": "value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/name",
        "@type",
        "https://openminds.ebrains.eu/vocab/isPartOf",
        "@id"
    ],
    "type": "object"
}