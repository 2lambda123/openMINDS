{
    "$id": "https://openminds.ebrains.eu/core/measurement?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Measurement",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Measurement",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/additionalRemarks": {
            "_instruction": "Enter any additional remarks concerning this measurement.",
            "description": "Mention of what deserves additional attention or notice.",
            "title": "additionalRemarks",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/measuredQuantity": {
            "_instruction": "Enter the quantity that is being measured.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/MeasuredQuantity"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "measuredQuantity",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/measuredWith": {
            "_instruction": "Add the device used for this measurement.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "measuredWith",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/timestamp": {
            "_instruction": "Enter the date and time when this measurement was made.",
            "format": "date-time",
            "title": "timestamp",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/value": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "description": "Greatest quantity attained or allowed.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "maxValueUnit": {
                            "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "maxValueUnit"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "description": "Smallest quantity attained or allowed.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "minValueUnit": {
                            "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "minValueUnit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/measuredQuantity",
        "@id",
        "https://openminds.ebrains.eu/vocab/value"
    ],
    "type": "object"
}