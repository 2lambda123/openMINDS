{
    "$id": "https://openminds.ebrains.eu/core/serviceLink?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/ServiceLink",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/ServiceLink",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/dataLocation": {
            "_instruction": "Add the file, file bundle, or atlas annotatation with the data that are linked to the specified service.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/File",
                            "https://openminds.ebrains.eu/core/FileBundle",
                            "https://openminds.ebrains.eu/sands/ParcellationEntityVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "dataLocation",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a name that should be used as preferred display label for this service link.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/openDataIn": {
            "_type": "https://openminds.ebrains.eu/core/URL",
            "properties": {
                "URL": {
                    "_formats": [
                        "iri"
                    ],
                    "_instruction": "Enter a uniform resource locator (URL).",
                    "title": "URL",
                    "type": "string"
                }
            },
            "required": [
                "URL"
            ],
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/service": {
            "_instruction": "Add the service in which the specified data can be opened.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/Service"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "service",
            "type": "object"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/dataLocation",
        "@id",
        "https://openminds.ebrains.eu/vocab/openDataIn",
        "@type",
        "https://openminds.ebrains.eu/vocab/service"
    ],
    "type": "object"
}