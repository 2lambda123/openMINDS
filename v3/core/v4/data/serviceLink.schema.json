{
    "$id": "https://openminds.ebrains.eu/core/serviceLink?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/ServiceLink",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/ServiceLink",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/dataLocation": {
            "_instruction": "Add the location of the data that are linked to this specific service (e.g., stored as file (bundles) or registered as other entities such as atlas annotations).",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/File",
                            "https://openminds.ebrains.eu/core/FileArchive",
                            "https://openminds.ebrains.eu/core/FileBundle",
                            "https://openminds.ebrains.eu/core/ModelVersion",
                            "https://openminds.ebrains.eu/publications/LivePaperResourceItem",
                            "https://openminds.ebrains.eu/sands/ParcellationEntityVersion"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "dataLocation",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/displayLabel": {
            "_instruction": "Enter a display label for this service link.",
            "title": "displayLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/openDataIn": {
            "_instruction": "Enter the internationalized resource identifier (IRI) to the linked data in the specified service.",
            "format": "iri",
            "title": "openDataIn",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/previewImage": {
            "_instruction": "Add an image file to this service link that acts as a preview of its content or could function as an icon.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/File"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "previewImage",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/service": {
            "_instruction": "Add the service in which the specified data can be opened.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/Service"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "service",
            "type": "object"
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/openDataIn",
        "https://openminds.ebrains.eu/vocab/dataLocation",
        "@id",
        "https://openminds.ebrains.eu/vocab/service"
    ],
    "type": "object"
}