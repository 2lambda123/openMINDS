{
    "$id": "https://openminds.ebrains.eu/core/fileArchive?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/FileArchive",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FileArchive",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/IRI": {
            "_instruction": "Enter the internationalized resource identifier (IRI) to this file archive.",
            "description": "Stands for Internationalized Resource Identifier which is an internet protocol standard that builds on the URI protocol, extending the set of permitted characters to include Unicode/ISO 10646.",
            "format": "iri",
            "title": "IRI",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/format": {
            "_instruction": "Add the content type of this file archive.",
            "description": "Method of digitally organizing and structuring data or information.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "format",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/sourceData": {
            "_instruction": "Add the data that were ingested and modified to create this file archive.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "sourceData",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/format",
        "@id",
        "https://openminds.ebrains.eu/vocab/IRI"
    ],
    "type": "object"
}