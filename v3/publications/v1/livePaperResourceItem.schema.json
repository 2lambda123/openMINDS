{
    "$id": "https://openminds.ebrains.eu/publications/livePaperResourceItem?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/publications/LivePaperResourceItem",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/publications/LivePaperResourceItem",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/IRI": {
            "_instruction": "Enter the IRI of the resource item.",
            "description": "Stands for Internationalized Resource Identifier which is an internet protocol standard that builds on the URI protocol, extending the set of permitted characters to include Unicode/ISO 10646.",
            "format": "iri",
            "title": "IRI",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/hostedBy": {
            "_instruction": "Add the hosting organization of this live paper resource item.",
            "description": "Reference to an organization that provides facilities and services for something.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Organization"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "hostedBy",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/isPartOf": {
            "_instruction": "Enter the section this resource item is part of.",
            "description": "Reference to the ensemble of multiple things or beings.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/publications/LivePaperSection"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "isPartOf",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a label for this item.",
            "description": "Word or phrase that constitutes the distinctive designation of a being or thing.",
            "title": "name",
            "type": "string"
        }
    },
    "required": [
        "@type",
        "https://openminds.ebrains.eu/vocab/isPartOf",
        "@id",
        "https://openminds.ebrains.eu/vocab/hostedBy",
        "https://openminds.ebrains.eu/vocab/IRI",
        "https://openminds.ebrains.eu/vocab/name"
    ],
    "type": "object"
}