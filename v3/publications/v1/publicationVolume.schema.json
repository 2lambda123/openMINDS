{
    "$id": "https://openminds.ebrains.eu/publications/publicationVolume?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/publications/PublicationVolume",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/publications/PublicationVolume",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/isPartOf": {
            "_instruction": "Add the journal this is a volume of.",
            "description": "Reference to the ensemble of multiple things or beings.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/publications/Periodical"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "isPartOf",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/volumeNumber": {
            "_instruction": "Enter the number of this volume.",
            "title": "volumeNumber",
            "type": "string"
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/isPartOf",
        "@type",
        "@id",
        "https://openminds.ebrains.eu/vocab/volumeNumber"
    ],
    "type": "object"
}