{
    "$id": "https://openminds.ebrains.eu/chemicals/productSource?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/chemicals/ProductSource",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/chemicals/ProductSource",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/digitalIdentifier": {
            "_instruction": "Add the globally unique identifier for this product (e.g. 'Research Resource Identifier' (RRID)).",
            "description": "Digital handle to identify objects or legal persons.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/RRID"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "digitalIdentifier",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/identifier": {
            "_instruction": "Enter one or several identifiers for this product excluding globally unique identifiers such as RRIDs. e.g. catalog number",
            "description": "Term or code used to identify something or someone.",
            "title": "identifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/productName": {
            "_instruction": "Enter the name of the product as provided by the vendor.",
            "title": "productName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/provider": {
            "_instruction": "Add the provider of the product.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Organization",
                            "https://openminds.ebrains.eu/core/Consortium",
                            "https://openminds.ebrains.eu/core/Person"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "provider",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/purity": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quantitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "description": "Distinct technique used to quantify the uncertainty of a measurement.",
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "description": "Quantitative value range defining the uncertainty of a measurement.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "description": "Determinate quantity adopted as a standard of measurement.",
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "description": "Entry for a property.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "description": "Greatest quantity attained or allowed.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "maxValueUnit": {
                            "_instruction": "Add the unit of measurement for the maximum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "maxValueUnit"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "description": "Smallest quantity attained or allowed.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "minValueUnit": {
                            "_instruction": "Add the unit of measurement for the minimum value of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "minValueUnit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "https://openminds.ebrains.eu/vocab/provider",
        "@id",
        "https://openminds.ebrains.eu/vocab/productName",
        "@type"
    ],
    "type": "object"
}