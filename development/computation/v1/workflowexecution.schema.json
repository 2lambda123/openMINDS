{
    "$id": "https://openminds.ebrains.eu/computation/workflowExecution?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/computation/WorkflowExecution",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/computation/WorkflowExecution",
            "type": "string"
        },
        "stages": {
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/computation/Simulation",
                            "https://openminds.ebrains.eu/computation/Analysis",
                            "https://openminds.ebrains.eu/computation/Visualization"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Stages",
            "type": "object"
        },
        "startedBy": {
            "_instruction": "Add the person or software agent who launched this workflow execution.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Person",
                            "https://openminds.ebrains.eu/computation/SoftwareAgent"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Started by",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "@type",
        "stages"
    ],
    "title": "Workflow execution",
    "type": "object"
}