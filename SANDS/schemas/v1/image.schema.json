{
    "$id": "https://openminds.ebrains.eu/sands/image?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/Image",
    "description": "Structured information on an image.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/Image",
            "type": "string"
        },
        "coordinateSpace": {
            "_instruction": "Add the coordinate space this image exists in.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/sands/CoordinateSpace"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Coordinate space",
            "type": "object"
        },
        "definedIn": {
            "_instruction": "Add the file in which this image is stored in.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/FileInstance"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Defined in",
            "type": "object"
        },
        "voxelSize": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quanitative value.",
            "properties": {
                "uncertainty": {
                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "Uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "title": "Unit"
                },
                "value": {
                    "_instruction": "Enter the measurement value of this quantitative value.",
                    "title": "Value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "title": "Quantitative value",
            "type": "object"
        }
    },
    "required": [
        "coordinateSpace",
        "@id",
        "definedIn",
        "voxelSize",
        "@type"
    ],
    "title": "Image",
    "type": "object"
}