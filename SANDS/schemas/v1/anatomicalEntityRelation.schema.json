{
    "$id": "https://openminds.ebrains.eu/sands/anatomicalEntityRelation?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/AnatomicalEntityRelation",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/AnatomicalEntityRelation",
            "type": "string"
        },
        "criteria": {
            "_instruction": "Add the protocol execution defining the criteria that were applied to determine this relation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ProtocolExecution"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "criteriaQualityType": {
            "_instruction": "Add the quality type of the stated criteria used to determine this relation.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/CriteriaQualityType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "inRelationTo": {
            "_instruction": "Add the anatomical entity to which the relation is described.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/sands/AnatomicalEntity"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "qualitativeOverlap": {
            "_instruction": "Add the qualitative overlap that best describes the relation between the two anatomical entities.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/QualitativeOverlap"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "quantitativeOverlap": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "properties": {
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ]
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ]
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "type": "object"
                        },
                        "minValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ]
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "@type",
        "@id",
        "criteriaQualityType",
        "qualitativeOverlap",
        "inRelationTo"
    ],
    "type": "object"
}