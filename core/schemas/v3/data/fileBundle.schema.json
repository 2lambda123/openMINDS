{
    "$id": "https://openminds.ebrains.eu/core/fileBundle?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/FileBundle",
    "description": "Structured information on a bundle of file instances.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FileBundle",
            "type": "string"
        },
        "IRI": {
            "_instruction": "Enter the internationalized resource identifier (IRI) of this file bundle.",
            "description": "The Internationalized Resource Identifier (IRI) is and internet protocol standard that builds on the Uniform Resource Identifier (URI) protocol, extending the set of permitted characters to include Unicode/ISO 10646.",
            "format": "iri",
            "title": "IRI",
            "type": "string"
        },
        "format": {
            "_instruction": "If file instances within this bundle are organized and formatted according to a formal data structure use the appropriate contentType. Leave blank otherwise.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Format",
            "type": "object"
        },
        "groupedBy": {
            "_instruction": "Add the concept which was used to group file instances into this file bundle.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/FileBundleGrouping"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Grouped by",
            "type": "object"
        },
        "hash": {
            "_instruction": "Add the hash that was generated for this file bundle.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Hash"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Hash",
            "type": "object"
        },
        "isPartOf": {
            "_instruction": "Add the file bundle or file repository this file bundle is a part of.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/FileBundle",
                            "https://openminds.ebrains.eu/core/FileRepository"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Is part of",
            "type": "object"
        },
        "name": {
            "_instruction": "Enter the name of this file bundle.",
            "title": "Name",
            "type": "string"
        },
        "patternOfFilenames": {
            "_instruction": "Enter a regular expression (syntax: ECMA 262) which is valid for all filenames of the file instances that should be grouped into this file bundle.",
            "title": "Pattern of filenames",
            "type": "string"
        },
        "storageSize": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quanitative value.",
            "properties": {
                "typeOfUncertainty": {
                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                    ],
                    "title": "Type of uncertainty"
                },
                "uncertainty": {
                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "Uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "title": "Unit"
                },
                "value": {
                    "_instruction": "Enter the measurement value of this quantitative value.",
                    "title": "Value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "title": "Quantitative value",
            "type": "object"
        }
    },
    "required": [
        "@id",
        "isPartOf",
        "name",
        "IRI",
        "@type"
    ],
    "title": "File bundle",
    "type": "object"
}