{
    "$id": "https://openminds.ebrains.eu/core/fileRepository?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/FileRepository",
    "description": "Structured information on a file repository.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FileRepository",
            "type": "string"
        },
        "IRI": {
            "_instruction": "Enter the internationalized resource identifier (IRI) of this file repository.",
            "description": "The Internationalized Resource Identifier (IRI) is and internet protocol standard that builds on the Uniform Resource Identifier (URI) protocol, extending the set of permitted characters to include Unicode/ISO 10646.",
            "format": "iri",
            "title": "IRI",
            "type": "string"
        },
        "format": {
            "_instruction": "If file instances and bundles within the repository are organized and formatted according to a formal data structure use the appropriate contentType. Leave blank otherwise.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Format",
            "type": "object"
        },
        "hash": {
            "_instruction": "Add the hash that was generated for this file repository.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Hash"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Hash",
            "type": "object"
        },
        "hostedBy": {
            "_instruction": "Add the host of this file repository.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Organization"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Hosted by",
            "type": "object"
        },
        "name": {
            "_instruction": "Enter the name of this file repository.",
            "title": "Name",
            "type": "string"
        },
        "storageSize": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quanitative value.",
            "properties": {
                "typeOfUncertainty": {
                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                    ],
                    "title": "Type of uncertainty"
                },
                "uncertainty": {
                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "Uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "title": "Unit"
                },
                "value": {
                    "_instruction": "Enter the measurement value of this quantitative value.",
                    "title": "Value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "title": "Quantitative value",
            "type": "object"
        }
    },
    "required": [
        "name",
        "hostedBy",
        "@id",
        "IRI",
        "@type"
    ],
    "title": "File repository",
    "type": "object"
}