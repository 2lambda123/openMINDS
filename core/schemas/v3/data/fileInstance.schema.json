{
    "$id": "https://openminds.ebrains.eu/core/fileInstance?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/FileInstance",
    "description": "Structured information on a file instances.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/FileInstance",
            "type": "string"
        },
        "IRI": {
            "_instruction": "Enter the internationalized resource identifier of this file instance.",
            "description": "The Internationalized Resource Identifier (IRI) is and internet protocol standard that builds on the Uniform Resource Identifier (URI) protocol, extending the set of permitted characters to include Unicode/ISO 10646.",
            "format": "iri",
            "title": "IRI",
            "type": "string"
        },
        "content": {
            "_instruction": "Enter a short content description for this file instance.",
            "title": "Content",
            "type": "string"
        },
        "format": {
            "_instruction": "Add the content type of this file instance.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContentType"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Format",
            "type": "object"
        },
        "hash": {
            "_instruction": "Add the hash that was generated for this file instance.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Hash"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Hash",
            "type": "object"
        },
        "isPartOf": {
            "_instruction": "Add one or several file bundles in which this file instance can be grouped in.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/FileBundle",
                                "https://openminds.ebrains.eu/core/FileRepository"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Is part of",
            "type": "array",
            "uniqueItems": true
        },
        "name": {
            "_instruction": "Enter the name of this file instance.",
            "title": "Name",
            "type": "string"
        },
        "specialUsageRole": {
            "_instruction": "Add a special usage role for this file instance.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/FileUsageRole"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Special usage role",
            "type": "object"
        },
        "storageSize": {
            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "description": "Structured information on a quanitative value.",
            "properties": {
                "uncertainty": {
                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                    "items": {
                        "type": "number"
                    },
                    "maxItems": 2,
                    "minItems": 2,
                    "title": "Uncertainty",
                    "type": "array"
                },
                "unit": {
                    "_instruction": "Add the unit of measurement of this quantitative value.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                    ],
                    "title": "Unit"
                },
                "value": {
                    "_instruction": "Enter the measurement value of this quantitative value.",
                    "title": "Value",
                    "type": "number"
                }
            },
            "required": [
                "value"
            ],
            "title": "Quantitative value",
            "type": "object"
        }
    },
    "required": [
        "IRI",
        "isPartOf",
        "name",
        "@type",
        "@id"
    ],
    "title": "File instance",
    "type": "object"
}