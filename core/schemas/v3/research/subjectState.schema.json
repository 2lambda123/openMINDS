{
    "$id": "https://openminds.ebrains.eu/core/subjectState?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/SubjectState",
    "description": "Structured information on a temporary state of a subject.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/SubjectState",
            "type": "string"
        },
        "additionalRemarks": {
            "_instruction": "Enter additional remarks about the specimen (set) in this state.",
            "title": "Additional remarks",
            "type": "string"
        },
        "age": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quanitative value.",
                    "properties": {
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "Uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "Unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "title": "Value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "title": "Quantitative value",
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "description": "Structured information on a quanitative value.",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "title": "Uncertainty",
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "Unit"
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "title": "Value",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "title": "Quantitative value",
                            "type": "object"
                        },
                        "minValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "description": "Structured information on a quanitative value.",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "title": "Uncertainty",
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "Unit"
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "title": "Value",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "title": "Quantitative value",
                            "type": "object"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "title": "Quantitative value range",
                    "type": "object"
                }
            ]
        },
        "ageCategory": {
            "_instruction": "Add the age category of the subject in this state.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/AgeCategory"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Age category",
            "type": "object"
        },
        "handedness": {
            "_instruction": "Add the preferred hand of the subject in this state.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/Laterality"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Handedness",
            "type": "object"
        },
        "pathology": {
            "_instruction": "Add the pathology of the specimen (set) in this state.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Pathology",
            "type": "array",
            "uniqueItems": true
        },
        "weight": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quanitative value.",
                    "properties": {
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "Uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "Unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "title": "Value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "title": "Quantitative value",
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "description": "Structured information on a quanitative value.",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "title": "Uncertainty",
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "Unit"
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "title": "Value",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "title": "Quantitative value",
                            "type": "object"
                        },
                        "minValue": {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "description": "Structured information on a quanitative value.",
                            "properties": {
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "title": "Uncertainty",
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "Unit"
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "title": "Value",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "title": "Quantitative value",
                            "type": "object"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "title": "Quantitative value range",
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "@type",
        "@id",
        "ageCategory"
    ],
    "title": "Subject state",
    "type": "object"
}