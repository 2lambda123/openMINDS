{
    "$id": "https://openminds.ebrains.eu/core/parameterSetting?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/ParameterSetting",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/ParameterSetting",
            "type": "string"
        },
        "description": {
            "_instruction": "Enter a description of this parameter setting.",
            "type": "string"
        },
        "name": {
            "_instruction": "Enter the name of this parameter setting.",
            "type": "string"
        },
        "relevantFor": {
            "_instruction": "Add the technique or behavioral task where this parameter setting is used in.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/BehavioralTask",
                            "https://openminds.ebrains.eu/controlledTerms/Technique"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "unit": {
            "_instruction": "Add the unit of measurement used for the value of this parameter setting.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "value": {
            "_instruction": "Enter the value of this parameter setting.",
            "type": [
                "number",
                "string"
            ]
        }
    },
    "required": [
        "@type",
        "@id",
        "relevantFor",
        "name",
        "description",
        "value"
    ],
    "type": "object"
}