{
    "$id": "https://openminds.ebrains.eu/core/model?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Model",
    "description": "Structured information on a computational model (concept level).",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Model",
            "type": "string"
        },
        "abstractionLevel": {
            "_instruction": "Add the abstraction level of this model version.",
            "description": "The abstraction level indicates the extend of simplification of physical, spatial, or temporal details or attributes in the study of objects or systems.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/ModelAbstractionLevel"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Abstraction level",
            "type": "object"
        },
        "description": {
            "_instruction": "Enter a description (abstract) for this research product (max. 2000 characters, incl. spaces; no references).",
            "maxLength": 2000,
            "title": "Description",
            "type": "string"
        },
        "digitalIdentifier": {
            "_instruction": "Add the globally unique and persistent digital identifier of this research product.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/DigitalIdentifier"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Digital identifier",
            "type": "object"
        },
        "fullName": {
            "_instruction": "Enter a descriptive full name (title) for this research product.",
            "title": "Full name",
            "type": "string"
        },
        "hasComponent": {
            "_instruction": "Add one or several components (other models) of this computational model.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Model"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Has component",
            "type": "array",
            "uniqueItems": true
        },
        "hasVersion": {
            "_instruction": "Add one or several versions of this computational model.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/ModelVersion"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Has version",
            "type": "array",
            "uniqueItems": true
        },
        "homepage": {
            "_instruction": "Enter the internationalized resource identifier (IRI) to the homepage of this research product.",
            "format": "iri",
            "title": "Homepage",
            "type": "string"
        },
        "scope": {
            "_instruction": "Add the scope of this model version.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/ModelScope"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Scope",
            "type": "object"
        },
        "shortName": {
            "_instruction": "Enter a short name (alias) for this research product (max. 30 characters; no space).",
            "maxLength": 30,
            "title": "Short name",
            "type": "string"
        },
        "studyTarget": {
            "_instruction": "Add all study targets of this model version.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/Handedness",
                                "https://openminds.ebrains.eu/controlledTerms/Genotype",
                                "https://openminds.ebrains.eu/controlledTerms/Strain",
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel",
                                "https://openminds.ebrains.eu/controlledTerms/Phenotype",
                                "https://openminds.ebrains.eu/controlledTerms/Species",
                                "https://openminds.ebrains.eu/controlledTerms/Organ",
                                "https://openminds.ebrains.eu/controlledTerms/TermSuggestion",
                                "https://openminds.ebrains.eu/controlledTerms/CellType",
                                "https://openminds.ebrains.eu/controlledTerms/BiologicalSex"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Study target",
            "type": "array",
            "uniqueItems": true
        }
    },
    "required": [
        "shortName",
        "description",
        "fullName",
        "scope",
        "@id",
        "@type",
        "studyTarget",
        "abstractionLevel",
        "digitalIdentifier"
    ],
    "title": "Model",
    "type": "object"
}