{
    "$id": "https://openminds.ebrains.eu/core/organization?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Organization",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Organization",
            "type": "string"
        },
        "digitalIdentifier": {
            "_instruction": "Add one or several globally unique and persistent digital identifier for this organization.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/DigitalIdentifier"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "type": "array",
            "uniqueItems": true
        },
        "fullName": {
            "_instruction": "Enter the full name of the organization.",
            "type": "string"
        },
        "hasParent": {
            "_instruction": "Add a parent organization to this organization.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/Organization"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "type": "object"
        },
        "homepage": {
            "_instruction": "Enter a internationalized resource identifier (IRI) to the homepage of this organization.",
            "format": "iri",
            "type": "string"
        },
        "shortName": {
            "_instruction": "Enter the short name of this organization.",
            "type": "string"
        }
    },
    "required": [
        "fullName",
        "@id",
        "@type"
    ],
    "type": "object"
}