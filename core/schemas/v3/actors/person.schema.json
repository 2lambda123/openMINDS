{
    "$id": "https://openminds.ebrains.eu/core/person?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/Person",
    "description": "Structured information on a person.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/Person",
            "type": "string"
        },
        "affiliation": {
            "_instruction": "Add the current and, if necessary, past affiliations of this person",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/Affiliation"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Affiliation",
            "type": "array",
            "uniqueItems": true
        },
        "contactInformation": {
            "_instruction": "Add the contact information of this person.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "format": "contactInformation",
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/core/ContactInformation"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Contact information",
            "type": "object"
        },
        "digitalIdentifier": {
            "_instruction": "Add one or several globally unique and persistent digital identifier for this person.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/DigitalIdentifier"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "Digital identifier",
            "type": "array",
            "uniqueItems": true
        },
        "familyName": {
            "_instruction": "Enter the family name of this person.",
            "title": "Family name",
            "type": "string"
        },
        "givenName": {
            "_instruction": "Enter the given name of this person.",
            "title": "Given name",
            "type": "string"
        }
    },
    "required": [
        "@type",
        "@id",
        "givenName"
    ],
    "title": "Person",
    "type": "object"
}