{
    "$id": "https://openminds.ebrains.eu/sands/anatomicalEntity?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_categories": [
        "studyTarget"
    ],
    "_type": "https://openminds.ebrains.eu/sands/AnatomicalEntity",
    "description": "Structured information on an anatomical entity.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/AnatomicalEntity",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/hasParent": {
            "_instruction": "Add another anatomical entity representing the anatomical parent structure of this anatomical entity.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/sands/AnatomicalEntity"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "hasParent",
            "type": "object"
        },
        "https://openminds.ebrains.eu/vocab/name": {
            "_instruction": "Enter a descriptive name for this anatomical entity based on anatomical location or characteristics.",
            "title": "name",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/ontologyIdentifier": {
            "_instruction": "Enter the internationalized resource identifier (IRI) pointing to the ontological term matching this anatomical entity.",
            "format": "iri",
            "title": "ontologyIdentifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/otherAnatomicalRelation": {
            "_type": "https://openminds.ebrains.eu/sands/AnatomicalEntityRelation",
            "description": "Structured information on the relation between one anatomical entity and another.",
            "properties": {
                "criteria": {
                    "_instruction": "Add the protocol execution defining the criteria that were applied to determine this relation.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/core/ProtocolExecution"
                    ],
                    "title": "criteria"
                },
                "criteriaQualityType": {
                    "_instruction": "Add the quality type of the stated criteria used to determine this relation.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/CriteriaQualityType"
                    ],
                    "title": "criteriaQualityType"
                },
                "inRelationTo": {
                    "_instruction": "Add the anatomical entity to which the relation is described.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/sands/AnatomicalEntity"
                    ],
                    "title": "inRelationTo"
                },
                "qualitativeOverlap": {
                    "_instruction": "Add the qualitative overlap that best describes the relation between the two anatomical entities.",
                    "_linkedTypes": [
                        "https://openminds.ebrains.eu/controlledTerms/QualitativeOverlap"
                    ],
                    "title": "qualitativeOverlap"
                },
                "quantitativeOverlap": {
                    "anyOf": [
                        {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                            "description": "Structured information on a quanitative value.",
                            "properties": {
                                "typeOfUncertainty": {
                                    "_instruction": "Add the type of uncertainty used for this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                                    ],
                                    "title": "typeOfUncertainty"
                                },
                                "uncertainty": {
                                    "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                                    "items": {
                                        "type": "number"
                                    },
                                    "maxItems": 2,
                                    "minItems": 2,
                                    "title": "uncertainty",
                                    "type": "array"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "unit"
                                },
                                "value": {
                                    "_instruction": "Enter the measurement value of this quantitative value.",
                                    "title": "value",
                                    "type": "number"
                                }
                            },
                            "required": [
                                "value"
                            ],
                            "title": "Quantitative value",
                            "type": "object"
                        },
                        {
                            "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                            "properties": {
                                "maxValue": {
                                    "_instruction": "Add the maximum value measured for this range.",
                                    "title": "maxValue",
                                    "type": "number"
                                },
                                "minValue": {
                                    "_instruction": "Add the minimum value measured for this range.",
                                    "title": "minValue",
                                    "type": "number"
                                },
                                "unit": {
                                    "_instruction": "Add the unit of measurement of this quantitative value range.",
                                    "_linkedTypes": [
                                        "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                                    ],
                                    "title": "unit"
                                }
                            },
                            "required": [
                                "maxValue",
                                "minValue"
                            ],
                            "title": "Quantitative value range",
                            "type": "object"
                        }
                    ]
                }
            },
            "required": [
                "criteriaQualityType",
                "inRelationTo",
                "qualitativeOverlap"
            ],
            "title": "Anatomical entity relation",
            "type": "object"
        }
    },
    "required": [
        "@type",
        "name",
        "@id"
    ],
    "title": "Anatomical entity",
    "type": "object"
}