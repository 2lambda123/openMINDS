{
    "$id": "https://openminds.ebrains.eu/sands/parcellationTerminology?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/sands/ParcellationTerminology",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/sands/ParcellationTerminology",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/anatomicalEntity": {
            "_instruction": "Add all anatomical entities that belong to this parcellation terminology.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/sands/AnatomicalEntity"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "anatomicalEntity",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/definedIn": {
            "_instruction": "Add one or several files in which this parcellation terminology is stored in.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/core/File"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "definedIn",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/fullName": {
            "_instruction": "Enter a descriptive full name for this parcellation terminology.",
            "title": "fullName",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/ontologyIdentifier": {
            "_instruction": "Enter the identifier (IRI) of the related ontological term matching this parcellation terminology.",
            "format": "iri",
            "title": "ontologyIdentifier",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/shortName": {
            "_instruction": "Enter a descriptive short name for this parcellation terminology.",
            "title": "shortName",
            "type": "string"
        }
    },
    "required": [
        "fullName",
        "anatomicalEntity",
        "@id",
        "shortName",
        "@type"
    ],
    "title": "Parcellation terminology",
    "type": "object"
}