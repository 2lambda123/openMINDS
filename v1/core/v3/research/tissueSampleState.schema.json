{
    "$id": "https://openminds.ebrains.eu/core/tissueSampleState?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/TissueSampleState",
    "description": "Structured information on a temporary state of a tissue sample.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/TissueSampleState",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/additionalRemarks": {
            "_instruction": "Enter additional remarks about the specimen (set) in this state.",
            "title": "additionalRemarks",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/age": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quanitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "title": "Quantitative value",
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "unit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "title": "Quantitative value range",
                    "type": "object"
                }
            ]
        },
        "https://openminds.ebrains.eu/vocab/lookupLabel": {
            "_instruction": "Enter a lookup label for this specimen (set) state that may help you to more easily find it again.",
            "title": "lookupLabel",
            "type": "string"
        },
        "https://openminds.ebrains.eu/vocab/pathology": {
            "_instruction": "Add the pathology of the specimen (set) in this state.",
            "items": {
                "else": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                },
                "if": {
                    "required": [
                        "@type"
                    ]
                },
                "then": {
                    "properties": {
                        "@id": {
                            "format": "iri",
                            "type": "string"
                        },
                        "@type": {
                            "enum": [
                                "https://openminds.ebrains.eu/controlledTerms/Disease",
                                "https://openminds.ebrains.eu/controlledTerms/DiseaseModel"
                            ],
                            "format": "iri",
                            "type": "string"
                        }
                    },
                    "required": [
                        "@id"
                    ]
                }
            },
            "minItems": 1,
            "title": "pathology",
            "type": "array",
            "uniqueItems": true
        },
        "https://openminds.ebrains.eu/vocab/weight": {
            "anyOf": [
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
                    "description": "Structured information on a quanitative value.",
                    "properties": {
                        "typeOfUncertainty": {
                            "_instruction": "Add the type of uncertainty used for this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                            ],
                            "title": "typeOfUncertainty"
                        },
                        "uncertainty": {
                            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
                            "items": {
                                "type": "number"
                            },
                            "maxItems": 2,
                            "minItems": 2,
                            "title": "uncertainty",
                            "type": "array"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "unit"
                        },
                        "value": {
                            "_instruction": "Enter the measurement value of this quantitative value.",
                            "title": "value",
                            "type": "number"
                        }
                    },
                    "required": [
                        "value"
                    ],
                    "title": "Quantitative value",
                    "type": "object"
                },
                {
                    "_type": "https://openminds.ebrains.eu/core/QuantitativeValueRange",
                    "properties": {
                        "maxValue": {
                            "_instruction": "Add the maximum value measured for this range.",
                            "title": "maxValue",
                            "type": "number"
                        },
                        "minValue": {
                            "_instruction": "Add the minimum value measured for this range.",
                            "title": "minValue",
                            "type": "number"
                        },
                        "unit": {
                            "_instruction": "Add the unit of measurement of this quantitative value range.",
                            "_linkedTypes": [
                                "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                            ],
                            "title": "unit"
                        }
                    },
                    "required": [
                        "maxValue",
                        "minValue"
                    ],
                    "title": "Quantitative value range",
                    "type": "object"
                }
            ]
        }
    },
    "required": [
        "@type",
        "@id"
    ],
    "title": "Tissue sample state",
    "type": "object"
}