{
    "$id": "https://openminds.ebrains.eu/core/quantitativeValue?format=json-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "_type": "https://openminds.ebrains.eu/core/QuantitativeValue",
    "description": "Structured information on a quanitative value.",
    "properties": {
        "@id": {
            "description": "Metadata node identifier.",
            "type": "string"
        },
        "@type": {
            "const": "https://openminds.ebrains.eu/core/QuantitativeValue",
            "type": "string"
        },
        "typeOfUncertainty": {
            "_instruction": "Add the type of uncertainty used for this quantitative value.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/TypeOfUncertainty"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Type of uncertainty",
            "type": "object"
        },
        "uncertainty": {
            "_instruction": "Enter the measurement uncertainty of this quantitative value.",
            "items": {
                "type": "number"
            },
            "maxItems": 2,
            "minItems": 2,
            "title": "Uncertainty",
            "type": "array"
        },
        "unit": {
            "_instruction": "Add the unit of measurement of this quantitative value.",
            "else": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "if": {
                "required": [
                    "@type"
                ]
            },
            "then": {
                "properties": {
                    "@id": {
                        "format": "iri",
                        "type": "string"
                    },
                    "@type": {
                        "enum": [
                            "https://openminds.ebrains.eu/controlledTerms/UnitOfMeasurement"
                        ],
                        "format": "iri",
                        "type": "string"
                    }
                },
                "required": [
                    "@id"
                ]
            },
            "title": "Unit",
            "type": "object"
        },
        "value": {
            "_instruction": "Enter the measurement value of this quantitative value.",
            "title": "Value",
            "type": "number"
        }
    },
    "required": [
        "@type",
        "value",
        "@id"
    ],
    "title": "Quantitative value",
    "type": "object"
}